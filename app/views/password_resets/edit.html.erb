<%= render 'shared/errors', obj: @admin %>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4 well">
    <%= form_for(@admin, url: password_reset_path(params[:id])) do |f| %>
    
     <%= hidden_field_tag :email, @admin.email %>
      
      <div class="form-group">
        <div class="input-group margin-bottom-sm col-sm-offset-1 col-sm-10">
          <%= f.label :password, "Nueva Contrase単a"  %>
          <%= f.password_field :password, class: "form-control", autofocus: true %>
        </div>
      </div>
      
      <div class="form-group">
        <div class="input-group margin-bottom-sm col-sm-offset-1 col-sm-10">
          <%= f.label :password_confirmation, "Confirmacion" %>
          <%= f.password_field :password_confirmation, class: "form-control"%>
        </div>
      </div>
      
      <div class="form-group">
        <div class="text-center">
          <!-- Metodo de Ruby para distinguir si se esta haciendo el llamado a la creacion de un nuevo registro o no. -->
          <%= f.submit(@admin.new_record? ? "Guardar Informacion" : "Actualizar Contrase単a", class: "btn btn-primary btn-sm") %>
        </div>
      </div>
     
    <% end %>
  </div>
</div>