<div class="home-structure-outer">
  <div class="home-structure-inner">
    
    <div class="div-caduceus">
      <img class="img-caduceus" src="assets/caduceus.png">
    </div>
    
    <div class="principal-title">
      <h2>Clinica Medica Familiar</h2>
    </div>
    
    <div class="principal-subtitle">
      <h4>Dr. Cubillas</h4>
    </div>
    
    
    <div class="row">
      <div class="col-sm-10 col-sm-offset-1 well">
        <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      
          <div class="form-group">
              <div class="text-center">
                <%= f.label :password, "Contraseña de Acceso" %>
              </div>
              <div class="col-sm-offset-1 col-sm-10">
                <%= f.password_field :password, class: "form-control", autocomplete: "off", autofocus: true %>
              </div>
            </div>
            
            <div class="form-group f-pass">
              <small><%= link_to "Olvide mi contraseña", password_resets_path, method: :post %></small>
            </div>
            
            <div class="form-group">
              <div class="text-center">
                <%= f.submit "Iniciar Sesion", class: "btn btn-primary btn-md" %>
              </div>
            </div>
          
        <% end %>
      </div>
    </div>
    
  </div>
</div>




